#include<stdio.h>
#include<string.h>
void Copy_String(char str[],char str1[],int i)
{
    str1[i]=str[i];
    if(str[i]=='\0')
        return;
    Copy_String(str,str1,i+1);
}
int main()
{
    char str[30];
    printf("Enter your String:");
    scanf("%[^\n]",str);
    char str1[30]="";
    Copy_String(str,str1,0);
    printf("Copy Done...\n");
    printf("Copy string is: %s",str1);

}
